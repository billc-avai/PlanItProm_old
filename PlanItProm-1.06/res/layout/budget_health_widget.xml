<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/budgetHealthWidget"
     android:layout_width="210dp"
     android:layout_height="wrap_content"
     >

    
    <LinearLayout 
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:animateLayoutChanges="true" 
        >
    
    
	    <LinearLayout 
	        android:id="@+id/header"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="left"
	        >
	        
		    <ToggleButton android:id="@+id/btn_hide_table"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:textOn="" 
				android:textOff=""
				android:src="@drawable/carrot_down_img"
				android:background="@drawable/btn_toggle_carrot"
		
				/>
	
	       <TextView
	           android:id="@+id/homeBHMtext"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="left"
	           android:text="@string/budget_health_meter"
	           android:textAppearance="?android:attr/textAppearanceMedium"
	           android:textColor="#ffffff" />
	       
	    </LinearLayout>
	       
		
		<LinearLayout
		    android:id="@+id/budget_health_table"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/budget_health_table_bkgd"
		    android:orientation="vertical"
		    android:layout_marginBottom="10dp"
		    android:visibility="gone"
		    >
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center">
		        
		        <TextView
		            android:id="@+id/headerTotalSpent"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:paddingLeft="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:text="@string/total_spent"
		            android:textColor="#000"
		            />
		        
		        <TextView
		            android:layout_width="1dp"
		       		android:layout_height="match_parent"
		        	android:background="#FF878787"
		            />
		        
		        <TextView
		            android:id="@+id/totalSpent"
		            android:layout_width="70dp"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:singleLine="true"
		            android:paddingRight="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:ems="10"
		            android:text="$200"
		            />        
		        
		    </LinearLayout>
		    
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#FF878787"/>
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
		        
		        <TextView
		            android:id="@+id/headerBudgetedToDate"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:gravity="left|center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:text="@string/budgeted_to_date"
		            android:textColor="#000"
		            />
		        
		        <TextView
		            android:layout_width="1dp"
		       		android:layout_height="match_parent"
		        	android:background="#FF878787"
		            />
		        
		        <TextView
		            android:id="@+id/budgetedToDate"
		            android:layout_width="70dp"
		            android:layout_height="match_parent"
		            android:gravity="right"
		            android:layout_gravity="right"
		            android:paddingRight="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:ems="10"
		            android:text="$100" />
		    </LinearLayout>
		    
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#FF878787"/>
		    
		     <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
		        
		        <TextView
		            android:id="@+id/headerTotalBudget"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:gravity="left|center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:text="@string/total_budget"
		            android:textColor="#000"
		             />      
		            
		        <TextView
		            android:layout_width="1dp"
		       		android:layout_height="match_parent"
		        	android:background="#FF878787"
		            />
		         
		        <TextView
		            android:id="@+id/totalBudget"
		            android:layout_width="70dp"
		            android:layout_height="match_parent"
		            android:gravity="right"
		            android:paddingRight="10dp"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:singleLine="true"
		            android:ems="10"
		            android:text="$500"/>
		        
		    </LinearLayout>
		    
		</LinearLayout>
		
		</LinearLayout>

       <com.sevendesigns.planitprom.widgets.BudgetHealthMeter
           android:id="@+id/meter"
           android:layout_width="match_parent"
           android:layout_height="12dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="5dp"
           android:layout_below="@id/body" 
           android:layout_centerHorizontal="true"/>
       
</RelativeLayout>